<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_names"
        style="@style/cooler_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:hint="@string/et_hint" />
    <Button
        android:id="@+id/btn_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_adder"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="23dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/et_names"

        />
    <Button
        android:id="@+id/btn_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_details"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@id/btn_add_name"
        android:layout_alignStart="@id/btn_add_name"
        android:layout_alignEnd="@id/btn_add_name"/>

    <TextView
        android:id="@+id/tv_names_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_counter"
        style="@style/cooler_tv"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/btn_details"
        android:layout_alignBaseline="@id/btn_details"/>
</RelativeLayout>